{
  "version": 2,
  "builds": [{ "src": "server.js", "use": "@now/node-server" }],
  "routes": [
    {
      "src": "/user",
      "dest": "/server.js",
      "methods": ["GET"]
    },
    {
      "src": "/user",
      "dest": "/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/user/(?<id>[^/]*)",
      "dest": "/server.js",
      "methods": ["GET", "DELETE", "PUT"]
    },
    {
      "src": "/account/(?<id>[^/]*)",
      "dest": "/server.js",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/group/(?<id>[^/]*)",
      "dest": "/server.js",
      "methods": ["GET", "POST"]
    }
  ]
}
